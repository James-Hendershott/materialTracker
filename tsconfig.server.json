{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist-server",
    "resolveJsonModule": true,
    "types": ["node"]
  },
  "include": [
    "server.ts",
    "src/config/**/*.ts",
    "src/storage/**/*.ts",
    "src/types.ts"
  ]
}
